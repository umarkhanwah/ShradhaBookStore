@model ShradhaBookStore.Models.Manufacturer

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Add_Manufacturer";
}

<h1>Add_Manufacturer</h1>

<h4>Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add_Manufacturer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronyms" class="control-label"></label>
                <input asp-for="Acronyms" class="form-control" />
                <span asp-validation-for="Acronyms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Show_Manufacturers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
