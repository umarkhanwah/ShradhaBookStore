@model IEnumerable<ShradhaBookStore.Models.Manufacturer>
@{
    Layout = "_LayoutAdmin";
}
<div class="row">

    <h4>De-Activated Manufacturers</h4>
    @if (@ViewData["msg"] != null)
    {

        <div class="alert alert-warning">
            @ViewData["msg"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Abbreviation
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Acronyms
                    </td>
                    <td>
                        <a asp-action="Update_Manufacturer" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Activate_Manufacturer" asp-route-id="@item.Id">Activate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
