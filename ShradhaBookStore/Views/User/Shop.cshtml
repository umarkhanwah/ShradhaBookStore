@model ShradhaBookStore.Models.Allproduct
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutGuest";
}
<div class="container my-5">

<div class="row my-5">
    @foreach(var item in Model.Products)
    {
        
    <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="~/Images//Products/@item.Image" class="card-img-top" style="height:200px;" alt="...">
                <div class="card-body">
                    <h3 class="car-title">@item.Name</h3>
                    <p class="card-text">Category: @item.Category.Name</p>
                    <p class="card-text">Acronym: @item.Acronym</p>
                    <p class="card-text">@item.Description</p>
                </div>
            </div>
    </div>
    }
</div>

</div>